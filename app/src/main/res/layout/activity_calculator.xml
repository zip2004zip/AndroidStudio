<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.st.myapplication.CalculatorActivity"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="@android:color/darker_gray"
            android:editable="false"
            android:enabled="false"
            android:hint="Введите значение"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:inputType="numberDecimal"
            android:layout_gravity="right" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:columnOrderPreserved="false"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="1"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="2"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="3"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="4"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="5"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="6"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="7"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="8"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="9"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:text="0"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Delete"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorCleaning"
            android:textColor="@color/colorButtonCalculatorText"
            android:layout_gravity="right"
            android:layout_columnSpan="2" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="C"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorCleaning"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="+"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorArithmetic"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorArithmetic"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:text="*"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorArithmetic"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:text="/"
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorArithmetic"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="="
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorEquals"
            android:textColor="@color/colorButtonCalculatorText"/>

        <Button
            android:id="@+id/buttonComma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text=","
            android:textSize="20sp"
            android:backgroundTint="@color/colorButtonCalculatorNumber"
            android:textColor="@color/colorButtonCalculatorText"/>

    </GridLayout>


</RelativeLayout>
