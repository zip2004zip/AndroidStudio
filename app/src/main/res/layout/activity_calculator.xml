<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clickable="false"
    tools:context=".CalculatorPackage.CalculatorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/calculator_edittext_normal"
            android:enabled="false"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="1"
            android:onClick="onClick"
            android:text="1"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="2"
            android:onClick="onClick"
            android:text="2"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="3"
            android:onClick="onClick"
            android:text="3"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="4"
            android:onClick="onClick"
            android:text="4"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="5"
            android:onClick="onClick"
            android:text="5"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="6"
            android:onClick="onClick"
            android:text="6"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="7"
            android:onClick="onClick"
            android:text="7"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="8"
            android:onClick="onClick"
            android:text="8"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="9"
            android:onClick="onClick"
            android:text="9"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="0"
            android:onClick="onClick"
            android:text="0"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@drawable/calculator_button_selector_red"
            android:contentDescription="Del"
            android:onClick="onClick"
            android:text="&lt;--"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@drawable/calculator_button_selector_red"
            android:contentDescription="C"
            android:onClick="onClick"
            android:text="C"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@drawable/calculator_button_selector_lightgrey"
            android:clickable="false"
            android:contentDescription="+"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@drawable/calculator_button_selector_lightgrey"
            android:contentDescription="-"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@drawable/calculator_button_selector_lightgrey"
            android:contentDescription="*"
            android:onClick="onClick"
            android:text="*"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@drawable/calculator_button_selector_lightgrey"
            android:contentDescription="/"
            android:onClick="onClick"
            android:text="/"
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@drawable/calculator_button_selector_blue"
            android:contentDescription="="
            android:onClick="onClick"
            android:text="="
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonComma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@drawable/calculator_button_selector_darkgrey"
            android:contentDescription="."
            android:onClick="onClick"
            android:text=","
            android:textColor="@color/colorButtonCalculatorText"
            android:textSize="20sp" />

    </GridLayout>


</RelativeLayout>
